{
    "tasks": [
        {
            "label": "Bundle",
            "type": "shell",
            "command": ["rm -Rf ${workspaceFolder}/dist/* && npx spack && rm ${workspaceFolder}/dist/*.map && python3 ${workspaceFolder}/deployment/substitute.py --env-file ${workspaceFolder}/.env ${workspaceFolder}/dist"],
            "problemMatcher": [],
        },
        {
            "label": "Deploy",
            "type": "shell",
            "dependsOn": "Bundle",
            "command": ["pip install -r ${workspaceFolder}/deployment/requirements.txt && python ${workspaceFolder}/deployment/deploy.py"],
            "problemMatcher": [],
        }
    ]

}